<table class="table">
  <thead>
    <tr>
      <th scope="col">Full Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= button_to 'delete', user_path(user), method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end%>
  </tbody>
  <caption>Number of users: <%= @total %></caption>
  <caption>
    Number of users by role: Admin: <%= @total_by_role['admin'] %> -- Default: <%= @total_by_role['no_admin'] %>
  </caption>
</table>